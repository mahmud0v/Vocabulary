<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F4FF"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       tools:text="unique"
       android:textColor="#0A0A0A"
       android:id="@+id/rv_item_text1"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       android:textSize="20sp"
       android:layout_marginStart="50dp"
       android:layout_marginTop="10dp"
       />

    <TextView
        android:id="@+id/rv_item_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rv_item_text1"
        app:layout_constraintLeft_toLeftOf="@id/rv_item_text1"
        tools:text="[juˈniːk]"
        android:textColor="#A0A0A1"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/rv_item_text2"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:background="#E6E6EC"
        />
</androidx.constraintlayout.widget.ConstraintLayout>