<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FF">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="450dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/search_in_layout"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/im_fell_great"
            android:text="Dictionary"
            android:textColor="#FBF2FF"
            android:textSize="43sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="English - Uzbek"
            android:textColor="#C2C1C6"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/language_layout"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/united_kingdom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/zilla_slab_medium"
                    android:paddingLeft="10dp"
                    android:text="English"
                    android:textColor="#CBC7CF"
                    android:textSize="18sp" />
            </LinearLayout>

           <LinearLayout
               android:layout_width="33dp"
               android:layout_height="33dp"
               android:background="@drawable/change_icon"
               android:layout_marginTop="14dp"
               android:gravity="center"
               >

               <ImageView
                   android:layout_width="17dp"
                   android:layout_height="17dp"
                   android:src="@drawable/synchronization_1"
                   />
           </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/language_layout"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/uzbekistan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/zilla_slab_medium"
                    android:paddingLeft="10dp"
                    android:text="Uzbek"
                    android:textColor="#CBC7CF"
                    android:textSize="18sp" />
            </LinearLayout>



        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>